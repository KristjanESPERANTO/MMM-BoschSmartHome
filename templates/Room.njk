{% import "templates/badges/Badges.njk" as badges %}
{% import "templates/tiles/Tiles.njk" as tiles %}
{% import "templates/ClimateControl.njk" as climateControl %}

{% macro render(room, utils) %}
  <div class='bsh-room-wrapper'>
    <div class="bsh-room-title">
      <span class="bsh-room-icon">
        <i class="fas {{ utils.getRoomIcon(room.iconId) }}"></i>
      </span>
      <span class="bsh-room-name">
        {{room.name}}
      </span>
      {{ climateControl.render(room, utils) }}
      {{ badges.render(room, utils)}}
    </div>
    {{ tiles.render(room, utils) }}
  </div>
{% endmacro %}
